<%- include('../partials/header') %>
<form action="/flights" method="POST" class="container">
  <label class="col">Airline:
    <select name="airline" class="col">
        <option value="American">American</option>
        <option value="Delta">Delta</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
  </label><br>
  <label class="col">Airport:
    <select name="airport" class="col">
        <option value="ATL">ATL</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
  </label><br>
  <label class="col">Flight Number
    <input type="number" name="flightNo" min="10" max="9999" required>
  </label><br>
  <label class="col">Departs:
    <input type="datetime-local" name="departs" value="2022-04-5T00:00" min="2022-04-5T00:00" required>
  </label><br>
  <input type="submit" value="Add Flight">
</form>
<%- include('../partials/footer') %>